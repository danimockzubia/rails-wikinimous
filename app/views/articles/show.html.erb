<body>
  <div class='container'>
    <div class='card'>
      <h2><%= @article.title %></h2>
      <p><%= @article.content %></p>
    <div>
    <div class='card'>
      <%= form_for(@article) do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :content %>
        <%= f.text_field :content %>
        <%= f.submit %>
                <%= link_to '<i class="fa fa-trash" aria-hidden="true" ></i>'.html_safe,
          articles_path(@article),
          method: :delete,
          data: { confirm: "Are you sure you want to delete?" } %>
      <% end %>
    </div>
  </div
